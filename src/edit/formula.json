{
	"fieldsets": [{
		"title": "Publication",
		"fields": [{
			"id": "title"
		}, {
			"id": "published"
		}, {
			"id": "publication_type"
		}, {
			"id": "license",
			"enum": [
				null,
				"http://creativecommons.org/publicdomain/mark/1.0/",
				"http://creativecommons.org/publicdomain/zero/1.0/",
				"http://creativecommons.org/licenses/by-nc-nd/4.0/",
				"http://creativecommons.org/licenses/by/4.0/"
			]
		}, {
			"id": "abstract"
		}, {
			"id": "overview"
		}]
	}, {
		"title": "Details",
		"fields": [
			"doi",
			"isbn",
			"issn",

			{
				"id": "journal",
				"condition": "publication_type != 'book' && publication_type != 'map' && publication_type != 'poster' && publication_type != 'abstract'"
			}, {
				"id": "conference",
				"condition": "publication_type == 'poster' || publication_type == 'abstract'"
			},
      "volume",
      "issue",
      {
				"id": "suppl",
				"title": "supplement"
			}, {
				"id": "page_count",
				"title": "total number of pages"
			}, {
				"id": "pages",
				"title": "OR from page to page"
			}, {
				"id": "art_no",
				"title": "article no"
			}, {
				"id": "publication_lang",
				"title": "publication language"
			}, {
				"id": "comment",
				"type": "textarea"
			}
		]
	}, {
		"title": "People",
		"fields": [{
			"id": "people",
			"fields": ["!id"]
		}]
	}, {
		"title": "Organisations",
		"fields": ["organisations"]
	}, {
		"title": "Classification",
		"fields": [{
				"id": "topics",
				"type": "array"
			}, {
				"id": "programme",
				"title": "programmes",
				"enum": [
					"ICE Ecosystems",
					"ICE Fluxes",
					"ICE Antarctica",
					"N-ICE",
					"ICE",
					"Biodiversity",
					"Environmental pollutants",
					"Geology and geophysics",
					"Oceans and sea ice",
					"Environmental management"
				]
			},
			"tags",
      {
				"id": "research_stations",
				"enum": [
					"Troll",
					"Ny-Ålesund",
					"Zeppelin",
					"Bouvetøya",
					"Svarthamaren"
				]
			}, {
				"id": "locations",
				"items": {
					"fields": ["placename", "area", "!country", "!hemisphere", "!latitude"]
				}
			}
		]
	},
	 {
      "title": "Links",
      "fields": [{
        "id": "links",
        "items": {
          "fields": [{
            "id": "rel",
            "title": "type of link (relation between this registration and the link)"
          }, {
            "id": "href",
            "title": "link (please include protocol f.ex. 'http://' as in link http://www.npolar.no)"
          },
        "!hreflang",
        "!type",
        {
          "id": "title",
          "title": "link title"
        }
          ]
        }
      }]
},
 {
		"title": "Files",
		"fields": ["files"]
	}]
}
